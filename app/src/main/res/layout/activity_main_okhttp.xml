<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".net.okhttp.MainOkhttpActivity"
    android:orientation="vertical">

    <include layout="@layout/common_head"/>
    <Button
        android:id="@+id/btn_about_get"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_corners1"
        android:textColor="@color/white"
        android:text="GET"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_about_post_form"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_corners2"
        android:textColor="@color/white"
        android:text="PSOT FORM"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/btn_about_post_string"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/bg_corners3"
        android:textColor="@color/white"
        android:text="PSOT STRING"
        android:textAllCaps="false"/>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:padding="@dimen/dp_10"/>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>